<h2>Searched for <%= @keyword %></h2>

<% if !@none %>
  <% if @results[:categories].any? %>
    <h3>Categories: </h3>

    <% @results[:categories].each do |cat| %>
      <%= link_to "#{cat.name}", boardcategory_boardposts_path(cat) %> <br>
    <% end %>
  <% end %>

  <% if @results[:posts].any? %>
    <h3>Posts: </h3>
    <% @results[:posts].each do |post| %>
      <%= link_to "#{post.title}", boardcategory_boardpost_path(post.category_id) %> <br>
    <% end %>
  <% end %>
<% else %>
  <p>No Results Found</p>
<% end %>
