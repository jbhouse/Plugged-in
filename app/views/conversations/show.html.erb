<div class="container">
  <h2 class="cyan-text text-darken-3">Your Conversation with <%= @convo.other_user(current_user).username %></h2>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col s9 grey lighten-2">
      <div id="<%= @convo.id %>" class="message-list">
        <ul id="<%= current_user.id %>" class="messages">
          <% if @messages %>
          <% @messages.each do |message| %>
          <% if message.user_id == current_user.id %>

<div class="relative">
<div class="chip"><%= image_tag current_user.avatar.url(:medium)%><span class="message left"> <%= message.content %></span></div>
<div class="clear"></div>
</div>

<% else %>
<div class="relative">
    <div class="chip right"><%= image_tag @convo.other_user(current_user).avatar.url(:medium)%></div>
    <span class="message right absolute"> <%= message.content %></span>
    <div class="clear"></div></div>
    <% end %>
    <% end %>
    <% end %>
  </ul>
</div>
<br>
<br>
<div class="row">
  <div class="col s12 l12">
    <div class="card z-depth-5">
      <form>
        <div class="input-field cyan darken-3">
          <label class="black-text">Say Something: </label>
          <input type="search" data-behavior="room_speaker">
        </div>
      </form>
    </div>
  </div>
</div>
</div>
</div>
</div>
